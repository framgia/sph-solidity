{
  "tabWidth": 2,
  "semi": true,
  "printWidth": 80,
  "trailingComma": "none",
  "endOfLine": "crlf",
  "bracketSpacing": true,
  "overrides": [
    {
      "files": "*.vue",
      "options": {
        "parser": "vue"
      }
    },
    {
      "files": "*.sol",
      "options": {
        "tabWidth": 4
      }
    }
  ]
}
